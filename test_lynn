    <script>
        // Set current date
        const currentDate = new Date().toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });
        document.getElementById('current-date').textContent = currentDate;
        
        // Generate PDF using jsPDF
        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('p', 'mm', 'a4');
            const element = document.body;
            
            // Show loading message
            const originalContent = element.innerHTML;
            const loadingDiv = document.createElement('div');
            loadingDiv.innerHTML = '<div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255,255,255,0.9); z-index: 9999; display: flex; justify-content: center; align-items: center; font-size: 1.5rem; color: #1e40af;"><div>Generating PDF... Please wait.</div></div>';
            document.body.appendChild(loadingDiv);
            
            // Use html2canvas to capture the content
            html2canvas(element, {
                scale: 2,
                useCORS: true,
                logging: false,
                width: element.scrollWidth,
                height: element.scrollHeight,
                windowWidth: element.scrollWidth,
                windowHeight: element.scrollHeight
            }).then(canvas => {
                const imgData = canvas.toDataURL('image/png');
                const imgWidth = 210; // A4 width in mm
                const pageHeight = 297; // A4 height in mm
                const imgHeight = canvas.height * imgWidth / canvas.width;
                
                let heightLeft = imgHeight;
                let position = 0;
                
                doc.addImage(imgData, 'PNG', 0, position, imgWidth, imgHeight);
                heightLeft -= pageHeight;
                
                // Add additional pages if needed
                while (heightLeft >= 0) {
                    position = heightLeft - imgHeight;
                    doc.addPage();
                    doc.addImage(imgData, 'PNG', 0, position, imgWidth, imgHeight);
                    heightLeft -= pageHeight;
                }
                
                // Remove loading message
                document.body.removeChild(loadingDiv);
                
                // Save the PDF
                doc.save('Standardized-Analytics-Framework-Proposal.pdf');
            });
        }
        
        // Open print preview
        function openPreview() {
            window.print();
        }
        
        // Add print event listener
        window.addEventListener('beforeprint', (event) => {
            // Add header and footer for print
            document.body.insertAdjacentHTML('beforeend', `
                <div style="display: none;">
                    <div id="print-header" style="position: fixed; top: 0; left: 0; width: 100%; text-align: center; padding: 10px; border-bottom: 1px solid #ccc; background: #f5f5f5; font-size: 0.8rem;">
                        Standardized Analytics Framework Proposal - Confidential
                    </div>
                    <div id="print-footer" style="position: fixed; bottom: 0; left: 0; width: 100%; text-align: center; padding: 10px; border-top: 1px solid #ccc; background: #f5f5f5; font-size: 0.7rem;">
                        Page <span class="pageNumber"></span> of <span class="totalPages"></span> | Generated on ${currentDate}
                    </div>
                </div>
            `);
        });
        
        // Add after print event listener
        window.addEventListener('afterprint', (event) => {
            // Remove print header and footer
            const printHeader = document.getElementById('print-header');
            const printFooter = document.getElementById('print-footer');
            if (printHeader) printHeader.remove();
            if (printFooter) printFooter.remove();
        });
    </script>
